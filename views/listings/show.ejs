<% layout('/layouts/boilerplate') -%>
       <script>
         const mapToken = '<%= process.env.MAP_TOKEN %>';
        const listing = <%- JSON.stringify(listing) %>;
       </script>
    <br> 
    <div class="row">

        <div class="col-8 offset-3">
            <h3>
                <%= listing.title %>
            </h3>
            <p class="col-6 offset-5"><i>Owned By : <%= listing.owner.username %> </i></p>
        </div>
        <div class="card col-6 offset-3 show-card listing-card">
            <img src="<%= listing.image.url %>" alt="Listing_image" class="card-img-top show-img">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %> <br><br>
                        &#8377;<%= listing.price.toLocaleString("en-IN") %>/Night <br>
                            <%= listing.location %> <br>
                                <%= listing.country %>
                </p>
            </div>
        </div>

        <% if(currUser && currUser._id.equals(listing.owner._id)){ %>
            <div class="btns mb-3">
                <a href="/listings/<%= listing.id %>/edit" class="btn edit-btn btn-dark col-1 offset-3 show-btn">
                    Edit
                </a>

                <form action="/listings/<%= listing.id %>?_method=DELETE" method="post">
                    <button class="btn btn-dark offset-5 show-btn">Delete</button>
                </form>
            </div>
            <% } %>
            <hr>

        <% if(currUser){ %>
            <div class="col-8 offset-3 mb-3 mt-3">
                <h4>Leave a Review</h4>
                <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate
                    class="needs-validation">

                    <div class="">
                        <label for="rating" class="form-label fs-5"></label>
                        <fieldset class="starability-checkmark">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]"
                                value="1" checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>

                    <div class="mb-3">
                        <label for="comment" class="form-label"></label>
                        <textarea name="review[comment]" id="comment" class="form-control" cols="5" rows="3"
                            required placeholder="Please give us your valuable feedback..."></textarea>
                    </div>
                    <button class="btn btn-outline-dark mb-3 offset-3">Submit</button>
                </form>
            </div>
            <% } %>

            <% if(listing.reviews.length > 0) { %>
            <div class="col-8 offset-3 mb-3 mt-3 row">
                <p style="font-size: 22px;"> All Reviews </p>
                <% for(review of listing.reviews) {%>
                    <div class="card col-5 m-3">
                        <div class="card-body">
                            <h6 class="card-title"> @<%= review.author.username%>
                            </h6>
                            <p class="card-text starability-result" data-rating=<%=review.rating %>></p>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                        </div>
                        <form class="mb-3 ms-3"
                            action="/listings/<%= listing.id %>/reviews/<%= review.id %>?_method=DELETE"
                            method="post">
                            <button class="btn btn-sm btn-dark ">Delete</button>
                        </form>
                    </div>
                <%}%>
                <hr>
            </div>
            <% } %>
            <div class="col-8 offset-3 mb-3 mt-3">
                <h3>Where You'll Be</h3>
                <div id="map"></div>
            </div>
    </div>
 
    <script src="/JS/map.js"></script>