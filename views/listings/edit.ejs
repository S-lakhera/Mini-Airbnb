<% layout('/layouts/boilerplate') -%>

    <div class="row col-8 offset-2">

        <body>
            <h2>Edit Your Listing</h2><br>
            <hr>
            <form action="/listings/<%= listing.id %>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-4 mt-2">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" size="36" name="listing[title]" value="<%= listing.title %>" class="form-control"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please provide a valid Title for the listing.
                    </div>
                </div>

                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required> <%= listing.description %>
                    </textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-4">
                    <p>Listing Image</p>
                    <img src= <%= imageUrl %>  alt="Listing Image" width="30%">
                </div>
                <div class="mb-4">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" size="36" name="listing[image]"
                        class="form-control">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-4">
                    <label for="price" class="form-label">Price</label>
                    <input type="number" size="36" name="listing[price]" value="<%= listing.price %>"
                        class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Price is mandatory.
                    </div>
                </div>
                <div class="row">

                    <div class="mb-4 col-md-6">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" size="36" name="listing[location]" value="<%= listing.location %>"
                            class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid Location/City.
                        </div>
                    </div>

                    <div class="mb-4 col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" size="36" name="listing[country]" value="<%= listing.country %>"
                            class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please provide a valid country.
                        </div>
                    </div>
                </div>

                <button class="btn edit-btn mb-3">Edit</button><br>
            </form>
        </body>
    </div>