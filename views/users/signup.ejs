<% layout('/layouts/boilerplate') -%>

<style>
    .signup-container {
        max-width: 500px;
        margin: 12px auto;
        padding: 40px;
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.22);
        transition: 0.3s ease;
        margin-bottom: 5rem;
    }

    .signup-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .signup-header h2 {
        font-weight: 700;
        font-size: 2rem;
        padding: 10px 15px;
        background: #f2f2f2;
        border-radius: 12px;
    }

    .form-control {
        border-radius: 12px;
    }

    .btn-signup {
        width: 100%;
        background-color: #e41d55;
        color: white;
        font-weight: 600;
        border: none;
        padding: 12px;
        border-radius: 12px;
        transition: 0.3s ease;
    }

    .btn-signup:hover {
        background-color: #c41244;
        color: white;
    }

    .signup-footer {
        margin-top: 20px;
        text-align: center;
    }

    .signup-footer a {
        text-decoration: none;
        font-weight: 600;
        color: #e41d55;
    }

    .signup-footer a:hover {
        text-decoration: underline;
    }

    /* === Dark Mode === */
    .dark-mode body {
        background: linear-gradient(135deg, #121212, #1e1e1e) !important;
        color: #f0f0f0;
    }

    .dark-mode .signup-container {
        background: rgba(30, 30, 30, 0.8);
        box-shadow: 0 20px 40px rgba(255, 255, 255, 0.05);
    }

    .dark-mode .signup-header h2 {
        background: #2a2a2a;
        color: #e0e0e0;
    }

    .dark-mode .form-control {
        background-color: #2e2e2e;
        color: #f1f1f1;
        border: 1px solid #444;
    }

    .dark-mode .form-control::placeholder {
        color: #bbb;
    }

    .dark-mode .btn-signup {
        background-color: #e41d55;
    }

    .dark-mode .btn-signup:hover {
        background-color: #c41244;
    }

    .dark-mode .signup-footer a {
        color: #e41d55;
    }
</style>

<div class="signup-container">
    <div class="signup-header">
        <h2>Register for Wanderlust</h2>
    </div>

    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text"
                name="username"
                id="username"
                class="form-control"
                placeholder="Enter your username..."
                required>
            <div class="invalid-feedback">Username is required.</div>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email"
                name="email"
                id="email"
                class="form-control"
                placeholder="Enter your email..."
                required>
            <div class="invalid-feedback">Email is required.</div>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password"
                name="password"
                id="password"
                class="form-control"
                placeholder="Create a secure password..."
                required>
            <div class="invalid-feedback">Password is required.</div>
        </div>

        <button type="submit" class="btn btn-signup mt-2">üìù Create Account</button>

        <div class="signup-footer">
            <p>Already registered? <a href="/login"><u>Log in here</u></a></p>
        </div>
    </form>
</div>
